@page
@model WebRazor_Temp.Pages.Categories.Delete

<h1>Delete</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control"/>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
            <a asp-page="Categories/Index" class="btn btn-outline-secondary" style="width: 150px">Back to List</a> <!-- This is a link to the Index page of Category Controller -->
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}